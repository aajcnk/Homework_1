<tr>
  <td><%= link_to petition.title, petition_path(petition) %></td>
  <td><%= params[:my] ? '' : petition.user.name %></td>
  <td><%= petition.votes.count %></td>
  <td><%= petition.created_at.strftime("%d/%m/%Y %H:%M") %></td>
  <td><%= link_to "Изменить", edit_petition_path(petition) if params[:my]%></td>
	<td><%= link_to "Удалить", petition, method: :delete  if params[:my]%></td>
</tr>

